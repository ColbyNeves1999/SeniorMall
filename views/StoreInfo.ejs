<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Store Analysis</title>
    <link rel="stylesheet" href="/css/style.css" />
    <style>
        .store-profile-views {
            font-size: 100px;
        }
    </style>
</head>

<body>

    <section>
        <h1>Store Analysis
        <a href="/" class="btn">
          Home
        </a>
      </h1>
    </section>
    <div class="store-container">
      <div class="store-info">
        <% stores.forEach(store => { %>
        <div class="store">
            <h2><%= store.storeName %></h2>
            <img src="/imgs/<%= store.storeName %>.png" width="400" height="300">
            <p>
              <span class="store-profile-views"> Store Profile views: <%= store.profileViews %></span>
            </p>
        </div>
        <% }); %>
      </div>
    </div>
    <div id="storeChart"></div>

    <!-- Script to fetch chart data and render the chart -->
    <script>
        fetch('/store/chart')
            .then(response => response.json())
            .then(data => {
                // Access chart data here and render the chart using your preferred charting library (e.g., Chart.js, D3.js, etc.)
                console.log(data); // Log the chart data to verify
            })
            .catch(error => console.error(error));
    </script>
</body>
</html>
