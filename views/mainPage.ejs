  <div style="text-align: center;">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <div id="map" style="width: 80%; height: 200px; margin: 0 auto;"></div>
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <script>
      var map = L.map('map').setView([35.828113, -90.686391], 13);

      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        maxZoom: 19,
      }).addTo(map);

      L.marker([35.828113, -90.686391]).addTo(map)
        .bindPopup("2105 East, Aggie Rd, Jonesboro, AR 72401")
        .openPopup();

      // JavaScript to handle button click event
      document.querySelectorAll('.sendStoreInfo').forEach(button => {
        button.addEventListener('click', function () {
          const storeName = this.getAttribute('data-store-name');
