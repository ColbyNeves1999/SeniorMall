<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="/css/style.css" />
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
</head>

<body>
    <h1>
        <div>Senior Design Mall</div>
            <a href="/" class="btn">
                Home
            </a>
        </div>
    
    </h1>

    <div class="cart">
        <h2>Shopping Cart</h2>
        <% if (cartItems.length > 0) { %>
            <ul>
                <% cartItems.forEach((item)=> { %>
                    <li>
                        <div>
                            <h3>
                                <%= item.cartItemName %>
                            </h3>
                            <p>Quantity: <%= item.quantity %>
                            </p>
                            <p>Description: <%= item.description %>
                            </p>
                            <div style="display: inline;">
                                <form style="display: inline;" method="POST" action="/removeFromCart">
                                  <input type="hidden" id="cartItemId" name="cartItemId" value="<%=item.cartItemId%>">
                                  <button>Remove <%=item.itemName%> from cart</button>
                                </form>
                              </div>
                        </div>
                    </li>
                    <% }); %>
            </ul>
            <p>Total Items: <%= cartItems.length %>
            </p>
            <% } else { %>
                <p>Your cart is empty.</p>
                <% } %>
    </div>

</body>

</html>